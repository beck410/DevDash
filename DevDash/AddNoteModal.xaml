<Window x:Class="DevDash.AddNoteModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddNoteModal" Height="400" Width="700">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/Images/school.png"></ImageBrush>
        </StackPanel.Background>
        <StackPanel Orientation="Vertical" x:Name="Modal_Add_Note_Container">
            <TextBlock HorizontalAlignment="Center" FontSize="36" Margin="0,10,0,10" Width="300">Add New Note</TextBlock>
            <StackPanel x:Name="Modal_Add_Note_Form" Width="600" HorizontalAlignment="center" Height="150" Margin="0">
                <Label x:Name="Modal_Add_Note_label" FontSize="16" Margin="0,15,0,0" Content="Note (Required)"/>
                <TextBox x:Name="Modal_Note" Height="50" Margin="0,15,0,0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="600">
                <Button x:Name="Modal_New_Note_Button" Click="Add_New_Note" Height="20px" Width="280" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Content="Add Note" Margin="0,20,0,0"/>
                <Button x:Name="Modal_Close_Button" Click="Close_btn" Height="20px" Width="280"  Content="Cancel" Margin="40,20,0,0"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
