<Window x:Class="DevDash.AddDependencyModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddDependencyModal" Height="600" Width="700">
    <Window.Background>
        <ImageBrush ImageSource="/Images/school.png"></ImageBrush>
    </Window.Background>
    <StackPanel Orientation="Vertical" x:Name="Modal_Add_Dependency_Container">
        <TextBlock HorizontalAlignment="Center" FontSize="36" Margin="196,10,130,10" Width="366">Add New Dependency</TextBlock>
        <StackPanel x:Name="Modal_Add_Dependency_Form" Width="600" HorizontalAlignment="center" Height="150" Margin="0">
            <Label x:Name="Modal_Add_Dependency_label" FontSize="16" Margin="0,15,0,0" Content="Dependency (Required)"/>
            <TextBox x:Name="Modal_Dependency" Height="50" Margin="0,15,0,0"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="600">
            <Button x:Name="Modal_New_Dependency_Button" Background="DarkSalmon" Click="Add_New_Dependency" Height="20px" Width="280" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Content="Add Dependency" Margin="0,20,0,0"/>
            <Button x:Name="Modal_Close_Button" Click="Close_btn" Height="20px" Background="DarkSalmon" Width="280"  Content="Cancel" Margin="40,20,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
